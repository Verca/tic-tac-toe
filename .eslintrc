{
  parser: "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  "rules": {
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "no-plusplus": 0,
    "space-infix-ops": 0,
    "arrow-parens": 0,
    "arrow-body-style": 0,
    "no-else-return": 0,
    "import/prefer-default-export": 0,
    "no-param-reassign": 0,
    "react/forbid-prop-types": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "react/jsx-no-bind": 0,
    "class-methods-use-this": 0,
    "no-useless-constructor": 0,
    "spaced-comment": 1,
  }
}
